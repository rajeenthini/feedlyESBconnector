<template name="getCategories" xmlns="http://ws.apache.org/ns/synapse">
    <sequence>
        <property name="uri.var.categoryId" expression="$func:categoryId" />\
        <property name="uri.var.category_label" expression="$func:categoryLabel" />

        <call>
            <endpoint>
                <http method="get"
                      uri-template="https://www.googleapis.com/books/v1/volumes?q={uri.var.category_id}" />
            </endpoint>
        </call>
    </sequence>
</template>